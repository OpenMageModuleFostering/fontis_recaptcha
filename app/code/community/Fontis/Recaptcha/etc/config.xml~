<config>
    <modules>
        <Fontis_Recaptcha>
            <version>1.0.0</version>
        </Fontis_Recaptcha>
    </modules>
    <global>
        <models>
            <fontis_recaptcha>
                <class>Fontis_Recaptcha_Model</class>
            </fontis_recaptcha>
        </models>
        <routers>
            <sendfriend>
                <rewrite>
                    <product>
                        <to>recaptcha/product</to>
                    </product>
                </rewrite>
            </sendfriend>
            <customer>
                <rewrite>
                    <account>
						<to>recaptcha/account</to>
                    </account>
                </rewrite>
            </customer>
            <contacts>
                <rewrite>
                    <index>
                        <to>recaptcha/contacts</to>
                    </index>
                </rewrite>
            </contacts>
        </routers>
        <helpers>
            <recaptcha>
                <class>Fontis_Recaptcha_Helper</class>
            </recaptcha>
        </helpers>
    </global>
    <frontend>
        <routers>
            <recaptcha>
                <use>standard</use>
                <args>
                    <module>Fontis_Recaptcha</module>
                    <frontName>recaptcha</frontName>
                </args>
            </recaptcha>
        </routers>
        <layout>
            <updates>
                <recaptcha module="Fontis_Recaptcha">
                    <file>fontis_recaptcha.xml</file>
                </recaptcha>
            </updates>
        </layout> 
    </frontend>
    <default>
        <admin>
            <recaptcha>
                <public_key></public_key>
                <private_key></private_key>
                <recaptcha_theme>clean</recaptcha_theme>
                <when_loggedin>1</when_loggedin>
            </recaptcha>
        </admin>
        <sendfriend>
            <recaptcha>
                <enabled>1</enabled>
            </recaptcha>
        </sendfriend>
        <contacts>
            <recaptcha>
                <enabled>1</enabled>
            </recaptcha>
        </contacts>
        <customer>
            <recaptcha>
                <enabled>1</enabled>
            </recaptcha>
        </customer>
    </default>
</config>
